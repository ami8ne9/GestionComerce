<Window x:Class="GestionComerce.Main.Facturation.CreateFacture.WAddArticle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:resx="clr-namespace:GestionComerce.Resources"
        Title="{x:Static resx:Resources.AddArticle}" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F8FAFC">

    <Window.Resources>
        <!-- Color Palette -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#3B82F6"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#10B981"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#0F172A"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#64748B"/>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="CaretBrush" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        Focusable="False"
                                        HorizontalScrollBarVisibility="Hidden"
                                        VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Field Label Style -->
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </Window.Resources>

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="{x:Static resx:Resources.AddArticle}" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="{StaticResource TextPrimaryBrush}"/>
            <TextBlock Text="{x:Static resx:Resources.SelectArticleType}" 
                       FontSize="14"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Selection Buttons -->
        <Grid Grid.Row="1" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnStockArticle"
                    Grid.Column="0"
                    Content="{x:Static resx:Resources.StockArticle}"
                    Style="{StaticResource ModernButtonStyle}"
                    Background="{StaticResource PrimaryBrush}"
                    Foreground="White"
                    Height="50"
                    Click="btnStockArticle_Click"/>

            <Button x:Name="btnCustomArticle"
                    Grid.Column="2"
                    Content="{x:Static resx:Resources.CustomArticle}"
                    Style="{StaticResource ModernButtonStyle}"
                    Background="{StaticResource SuccessBrush}"
                    Foreground="White"
                    Height="50"
                    Click="btnCustomArticle_Click"/>
        </Grid>

        <!-- Content Area -->
        <Border Grid.Row="2" 
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Padding="0">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
                <Grid x:Name="ContentGrid">
                    <!-- Stock Article Selection -->
                    <StackPanel x:Name="StockArticlePanel" Visibility="Collapsed">
                        <!-- Search Bar -->
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="{x:Static resx:Resources.SearchArticle}" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="txtSearchArticle"
                                 TextChanged="txtSearchArticle_TextChanged"
                                 Height="45"
                                 Padding="14,12"
                                 FontSize="14"
                                 FontFamily="Segoe UI"
                                 Background="White"
                                 Foreground="Black"
                                 BorderBrush="#E2E8F0"
                                 BorderThickness="1.5"
                                 VerticalContentAlignment="Center"/>
                        </StackPanel>

                        <TextBlock Text="{x:Static resx:Resources.SelectArticle}" Style="{StaticResource FieldLabel}"/>
                        <ComboBox x:Name="cmbStockArticles"
                              FontSize="14"
                              Height="45"
                              Margin="0,0,0,20"
                              SelectionChanged="cmbStockArticles_SelectionChanged"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{x:Static resx:Resources.UnitPrice}" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtStockPrice" 
                                     Style="{StaticResource ModernTextBox}"
                                     PreviewTextInput="DecimalTextBox_PreviewTextInput"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="{x:Static resx:Resources.Quantity}" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtStockQuantity" 
                                     Style="{StaticResource ModernTextBox}"
                                     PreviewTextInput="DecimalTextBox_PreviewTextInput"/>
                            </StackPanel>
                        </Grid>

                        <StackPanel Margin="0,20,0,0">
                            <TextBlock Text="{x:Static resx:Resources.TVA}" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="txtStockTVA" 
                                 Style="{StaticResource ModernTextBox}"
                                 PreviewTextInput="DecimalTextBox_PreviewTextInput"/>
                        </StackPanel>

                        <StackPanel x:Name="StockExpeditionPanel" Margin="0,20,0,0" Visibility="Collapsed">
                            <TextBlock Text="{x:Static resx:Resources.ShippedQuantity}" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="txtStockExpedition" 
                                 Style="{StaticResource ModernTextBox}"
                                 PreviewTextInput="DecimalTextBox_PreviewTextInput"
                                 Text="0"/>
                        </StackPanel>

                        <StackPanel Margin="0,20,0,0">
                            <TextBlock Text="{x:Static resx:Resources.AvailableStock}" 
                                   Style="{StaticResource FieldLabel}"/>
                            <TextBlock x:Name="txtAvailableStock"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource SuccessBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Custom Article Creation -->
                    <StackPanel x:Name="CustomArticlePanel" Visibility="Collapsed">
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="{x:Static resx:Resources.ArticleName}" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="txtCustomName" 
                                 Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{x:Static resx:Resources.UnitPrice}" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtCustomPrice" 
                                     Style="{StaticResource ModernTextBox}"
                                     PreviewTextInput="DecimalTextBox_PreviewTextInput"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="{x:Static resx:Resources.Quantity}" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtCustomQuantity" 
                                     Style="{StaticResource ModernTextBox}"
                                     PreviewTextInput="DecimalTextBox_PreviewTextInput"/>
                            </StackPanel>
                        </Grid>

                        <StackPanel Margin="0,20,0,0">
                            <TextBlock Text="{x:Static resx:Resources.TVA}" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="txtCustomTVA" 
                                 Style="{StaticResource ModernTextBox}"
                                 PreviewTextInput="DecimalTextBox_PreviewTextInput"/>
                        </StackPanel>

                        <StackPanel x:Name="CustomExpeditionPanel" Margin="0,20,0,0" Visibility="Collapsed">
                            <TextBlock Text="{x:Static resx:Resources.ShippedQuantity}" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="txtCustomExpedition" 
                                 Style="{StaticResource ModernTextBox}"
                                 PreviewTextInput="DecimalTextBox_PreviewTextInput"
                                 Text="0"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Initial State -->
                    <StackPanel x:Name="InitialPanel" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center">
                        <TextBlock Text="ðŸ“‹" 
                               FontSize="64" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,16"/>
                        <TextBlock Text="{x:Static resx:Resources.SelectArticleType}" 
                               FontSize="16"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Border>

        <!-- Action Buttons -->
        <Grid Grid.Row="3" Margin="0,24,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnCancel"
                    Grid.Column="0"
                    Content="{x:Static resx:Resources.Cancel}"
                    Style="{StaticResource ModernButtonStyle}"
                    Background="#94A3B8"
                    Foreground="White"
                    Height="45"
                    Click="btnCancel_Click"/>

            <Button x:Name="btnAdd"
                    Grid.Column="2"
                    Content="{x:Static resx:Resources.AddArticleButton}"
                    Style="{StaticResource ModernButtonStyle}"
                    Background="{StaticResource SuccessBrush}"
                    Foreground="White"
                    Height="45"
                    IsEnabled="False"
                    Click="btnAdd_Click"/>
        </Grid>
    </Grid>
</Window>