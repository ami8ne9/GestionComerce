<UserControl x:Class="GestionComerce.Main.Facturation.CreateFacture.CMainFa"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="800" 
             Background="#F8FAFC">

    <UserControl.Resources>
        <!-- Color Palette -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#3B82F6"/>
        <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#2563EB"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#10B981"/>
        <SolidColorBrush x:Key="SuccessHoverBrush" Color="#059669"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#8B5CF6"/>
        <SolidColorBrush x:Key="AccentHoverBrush" Color="#7C3AED"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#0F172A"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#64748B"/>
        <SolidColorBrush x:Key="InputBrush" Color="#F8FAFC"/>
        <SolidColorBrush x:Key="HoverBrush" Color="#F1F5F9"/>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                                <Setter TargetName="border" Property="Background" Value="#E2E8F0"/>
                                <Setter Property="Cursor" Value="No"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource HoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#F1F5F9"/>
                                <Setter Property="Foreground" Value="#94A3B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern DatePicker Style -->
        <Style x:Key="ModernDatePicker" TargetType="DatePicker">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        </Style>

        <!-- Section Title Style -->
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <!-- Field Label Style -->
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="32,28"/>
            <Setter Property="Margin" Value="0,0,0,24"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Fixed Header Section - Full Width -->
        <Border Grid.Row="0" 
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Height="80"
                Panel.ZIndex="100">
            <Grid Margin="40,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Title -->
                <Grid Grid.Column="0" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Border Background="#EEF2FF" 
                CornerRadius="10" 
                Padding="10"
                Margin="0,0,12,0"
                Grid.Column="0">
                        <TextBlock Text="📄" FontSize="24"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center" Grid.Column="1">
                        <TextBlock Text="Facture" 
                       FontFamily="Segoe UI"
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>
                </Grid>

                <!-- Right: Invoice Details -->
                <StackPanel Grid.Column="2" 
                Orientation="Horizontal" 
                VerticalAlignment="Center"
                Margin="32,0,0,0">

                    <!-- Invoice Number -->
                    <StackPanel Margin="0,0,16,0">
                        <TextBlock Text="N° Facture" 
                       Style="{StaticResource FieldLabel}"
                       Margin="0,0,0,4"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="txtInvoiceNumber" 
                         Grid.Column="0"
                         Style="{StaticResource ModernTextBox}" 
                         MaxLength="20"
                         Height="36"
                         Padding="12,0"
                         VerticalContentAlignment="Center"
                         HorizontalContentAlignment="Left"
                         FontSize="14"
                         TextAlignment="Left"/>
                            <Button x:Name="btnGenerateInvoiceNumber"
                        Grid.Column="1"
                        Content="🔄"
                        FontSize="14"
                        Background="{StaticResource PrimaryBrush}"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Height="36"
                        Width="36"
                        Margin="4,0,0,0"
                        Click="btnGenerateInvoiceNumber_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                    CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <StackPanel Margin="0,0,16,0">
                        <TextBlock Text="Date" 
                       Style="{StaticResource FieldLabel}"
                       Margin="0,0,0,4"/>
                        <DatePicker x:Name="dpInvoiceDate" 
                        Style="{StaticResource ModernDatePicker}"
                        Height="36"
                        Width="160"
                        Padding="12,8"
                        VerticalContentAlignment="Center"
                        FontSize="13"/>
                    </StackPanel>

                    <!-- Type -->
                    <StackPanel>
                        <TextBlock Text="Type" 
                       Style="{StaticResource FieldLabel}"
                       Margin="0,0,0,4"/>
                        <ComboBox x:Name="cmbInvoiceType" 
                      Style="{StaticResource ModernComboBox}"
                      SelectedIndex="0" 
                      Height="36"
                      Width="160"
                      Padding="12,8"
                      VerticalContentAlignment="Center"
                      FontSize="13"
                      SelectionChanged="cmbInvoiceType_SelectionChanged">
                            <ComboBoxItem Content="Facture"/>
                            <ComboBoxItem Content="Belle"/>
                            <ComboBoxItem Content="Pro Format"/>
                            <ComboBoxItem Content="Expedition"/>
                            <ComboBoxItem Content="Credit"/>
                            <ComboBoxItem Content="Bon Commande"/>
                            <ComboBoxItem Content="Bon Livraison"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Scrollable Content Section - Full Width -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="40,32">
            <StackPanel>

                <!-- User Information Section -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <Grid Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Background="#DBEAFE" 
                                        CornerRadius="10" 
                                        Padding="10"
                                        Margin="0,0,12,0"
                                        Grid.Column="0">
                                    <TextBlock Text="👤" FontSize="20"/>
                                </Border>
                                <TextBlock Text="Informations de l'Utilisateur" 
                                           Style="{StaticResource SectionTitle}"
                                           VerticalAlignment="Center"
                                           Margin="0"
                                           Grid.Column="1"/>
                            </Grid>
                            <Button Content="Sauvegarder"
                                    Style="{StaticResource ModernButtonStyle}"
                                    Background="{StaticResource SuccessBrush}"
                                    Foreground="White"
                                    HorizontalAlignment="Right"
                                    Click="Button_Click"/>
                        </Grid>

                        <!-- Row 1: Name | ICE | VAT -->
                        <Grid Margin="0,0,0,18">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                <TextBlock Text="Nom de l'Entreprise" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtUserName" 
                                         Style="{StaticResource ModernTextBox}" 
                                         MaxLength="50"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="8,0">
                                <TextBlock Text="Numéro ICE" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtUserICE" 
                                         Style="{StaticResource ModernTextBox}" 
                                         MaxLength="15"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Margin="8,0,0,0">
                                <TextBlock Text="Numéro VAT" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtUserVAT" 
                                         Style="{StaticResource ModernTextBox}" 
                                         MaxLength="15"/>
                            </StackPanel>
                        </Grid>

                        <!-- Row 2: Telephone | Etat Juridique | ID de Société -->
                        <Grid Margin="0,0,0,18">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                <TextBlock Text="Téléphone" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtUserPhone" 
                                         Style="{StaticResource ModernTextBox}" 
                                         MaxLength="15"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="8,0">
                                <TextBlock Text="État Juridique" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtUserEtatJuridique" 
                                         Style="{StaticResource ModernTextBox}" 
                                         MaxLength="30"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Margin="8,0,0,0">
                                <TextBlock Text="ID de Société" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtUserIdSociete" 
                                         Style="{StaticResource ModernTextBox}" 
                                         MaxLength="25"/>
                            </StackPanel>
                        </Grid>

                        <!-- Row 3: Siège d'Entreprise | Logo -->
                        <Grid Margin="0,0,0,18">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                <TextBlock Text="Siège d'Entreprise" Style="{StaticResource FieldLabel}"/>
                                <ComboBox x:Name="cmbUserSiegeEntreprise" 
                                          Style="{StaticResource ModernComboBox}"
                                          SelectedIndex="0">
                                    <ComboBoxItem Content="National"/>
                                    <ComboBoxItem Content="International"/>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                <TextBlock Text="Logo de l'Entreprise" Style="{StaticResource FieldLabel}"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="txtLogoPath" 
                                             Grid.Column="0"
                                             Style="{StaticResource ModernTextBox}"
                                             IsReadOnly="True"
                                             Background="#F8FAFC"/>
                                    <Button Grid.Column="1" 
                                            x:Name="btnBrowseLogo" 
                                            Content="📁 Parcourir" 
                                            Style="{StaticResource ModernButtonStyle}"
                                            Background="{StaticResource PrimaryBrush}" 
                                            Foreground="White"
                                            Margin="12,0,0,0"
                                            Click="BtnBrowseLogo_Click"/>
                                </Grid>
                            </StackPanel>
                        </Grid>

                        <!-- Row 4: Address (Full Width) -->
                        <StackPanel>
                            <TextBlock Text="Adresse Complète" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="txtUserAddress" 
                                     MaxLength="100"
                                     Style="{StaticResource ModernTextBox}"
                                     Height="90"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalContentAlignment="Top"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Client Information Section -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <Grid Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Background="#DCFCE7" 
                                        CornerRadius="10" 
                                        Padding="10"
                                        Margin="0,0,12,0"
                                        Grid.Column="0">
                                    <TextBlock Text="🏢" FontSize="20"/>
                                </Border>
                                <TextBlock Text="Informations du Client" 
                                           Style="{StaticResource SectionTitle}"
                                           VerticalAlignment="Center"
                                           Margin="0"
                                           Grid.Column="1"/>
                            </Grid>
                            <Button x:Name="btnSelectClient"
                                    Content="🔍 Sélectionner Client"
                                    Style="{StaticResource ModernButtonStyle}"
                                    Background="{StaticResource PrimaryBrush}"
                                    Foreground="White"
                                    HorizontalAlignment="Right"
                                    Click="btnSelectClient_Click"/>
                        </Grid>

                        <!-- Row 1: Name | ICE | VAT -->
                        <Grid Margin="0,0,0,18">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                <TextBlock Text="Nom du Client" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtClientName" 
                                         Style="{StaticResource ModernTextBox}" 
                                         MaxLength="50"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="8,0">
                                <TextBlock Text="Numéro ICE" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtClientICE" 
                                         Style="{StaticResource ModernTextBox}" 
                                         MaxLength="15"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Margin="8,0,0,0">
                                <TextBlock Text="Numéro VAT" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtClientVAT" 
                                         Style="{StaticResource ModernTextBox}" 
                                         MaxLength="15"/>
                            </StackPanel>
                        </Grid>

                        <!-- Row 2: Telephone | Etat Juridique | ID de Société -->
                        <Grid Margin="0,0,0,18">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                <TextBlock Text="Téléphone" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtClientPhone" 
                                         Style="{StaticResource ModernTextBox}" 
                                         MaxLength="15"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="8,0">
                                <TextBlock Text="État Juridique" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtClientEtatJuridique" 
                                         Style="{StaticResource ModernTextBox}" 
                                         MaxLength="30"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Margin="8,0,0,0">
                                <TextBlock Text="ID de Société" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtClientIdSociete" 
                                         Style="{StaticResource ModernTextBox}" 
                                         MaxLength="25"/>
                            </StackPanel>
                        </Grid>

                        <!-- Row 3: Siège d'Entreprise (alone, taking 1/3 width) -->
                        <Grid Margin="0,0,0,18">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                <TextBlock Text="Siège d'Entreprise" Style="{StaticResource FieldLabel}"/>
                                <ComboBox x:Name="cmbClientSiegeEntreprise" 
                                          Style="{StaticResource ModernComboBox}"
                                          SelectedIndex="0">
                                    <ComboBoxItem Content="National"/>
                                    <ComboBoxItem Content="International"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>

                        <!-- Row 4: Address (Full Width) -->
                        <StackPanel>
                            <TextBlock Text="Adresse Complète" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="txtClientAddress" 
                                     MaxLength="100"
                                     Style="{StaticResource ModernTextBox}"
                                     Height="90"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalContentAlignment="Top"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Invoice Information Section -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <Grid Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Background="#FEF3C7" 
                                        CornerRadius="10" 
                                        Padding="10"
                                        Margin="0,0,12,0"
                                        Grid.Column="0">
                                    <TextBlock Text="💰" FontSize="20"/>
                                </Border>
                                <TextBlock Text="Informations de Facturation" 
                                           Style="{StaticResource SectionTitle}"
                                           VerticalAlignment="Center"
                                           Margin="0"
                                           Grid.Column="1"/>
                            </Grid>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button x:Name="btnAddArticle"
                                        Content="📦 Ajouter Article"
                                        Style="{StaticResource ModernButtonStyle}"
                                        Background="{StaticResource AccentBrush}"
                                        Foreground="White"
                                        Margin="0,0,12,0"
                                        Click="btnAddArticle_Click"/>

                                <Button x:Name="btnSelectOperation"
                                        Content="➕ Ajouter Opération"
                                        Style="{StaticResource ModernButtonStyle}"
                                        Background="{StaticResource SuccessBrush}"
                                        Foreground="White"
                                        Click="btnSelectOperation_Click"/>
                            </StackPanel>
                        </Grid>

                        <!-- Operations Container -->
                        <Border Background="{StaticResource InputBrush}" 
        CornerRadius="12" 
        Padding="3"
        Margin="0,0,0,20"
        BorderBrush="{StaticResource BorderBrush}"
        BorderThickness="1.5"
        MaxHeight="400">
                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
                                <StackPanel x:Name="OperationContainer"/>
                            </ScrollViewer>
                        </Border>

                        <!-- 4 Fields Per Row Layout -->
                        <!-- Row 1 -->
                        <Grid Margin="0,0,0,18">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,6,0">
                                <TextBlock Text="État de Facture" Style="{StaticResource FieldLabel}"/>
                                <ComboBox x:Name="EtatFacture" 
                                          Style="{StaticResource ModernComboBox}"
                                          SelectedIndex="0" 
                                          SelectionChanged="EtatFacture_SelectionChanged">
                                    <ComboBoxItem Content="Normal"/>
                                    <ComboBoxItem Content="Annulée"/>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="6,0">
                                <TextBlock Text="Devise" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtCurrency" 
                                         MaxLength="10"
                                         Style="{StaticResource ModernTextBox}"
                                         Text="MAD"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Margin="6,0">
                                <TextBlock Text="Taux TVA (%)" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtTVARate" 
                                         IsEnabled="False"
                                         PreviewTextInput="DecimalTextBox_PreviewTextInput" 
                                         MaxLength="6"
                                         DataObject.Pasting="DecimalTextBox_Pasting" 
                                         Style="{StaticResource ModernTextBox}" 
                                         Text="0" 
                                         TextChanged="txtTVARate_TextChanged"/>
                            </StackPanel>
                            <StackPanel Grid.Column="3" Margin="6,0,0,0">
                                <TextBlock Text="Index de Facture" Style="{StaticResource FieldLabel}"/>
                                <ComboBox x:Name="IndexFacture" 
                                          Style="{StaticResource ModernComboBox}"
                                          SelectedIndex="0">
                                    <ComboBoxItem Content="0"/>
                                    <ComboBoxItem Content="1"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>

                        <!-- Row 2 -->
                        <Grid Margin="0,0,0,18">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,6,0">
                                <TextBlock Text="Montant Total HT" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtTotalAmount" 
                                         Style="{StaticResource ModernTextBox}" 
                                         IsEnabled="False"
                                         TextChanged="txtTotalAmount_TextChanged" 
                                         MaxLength="20"
                                         FontWeight="SemiBold"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="6,0">
                                <TextBlock Text="Montant TVA" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtTVAAmount" 
                                         Style="{StaticResource ModernTextBox}" 
                                         IsEnabled="False"
                                         MaxLength="20"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Margin="6,0">
                                <TextBlock Text="Montant Total TTC" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtApresTVAAmount" 
                                         Style="{StaticResource ModernTextBox}" 
                                         IsEnabled="False"
                                         MaxLength="20"
                                         FontWeight="Bold"
                                         FontSize="16"/>
                            </StackPanel>
                            <StackPanel Grid.Column="3" Margin="6,0,0,0">
                                <TextBlock Text="Remise" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="Remise" 
                                         PreviewTextInput="DecimalTextBox_PreviewTextInput"
                                         TextChanged="Remise_TextChanged"
                                         DataObject.Pasting="DecimalTextBox_Pasting" 
                                         Style="{StaticResource ModernTextBox}" />
                            </StackPanel>
                        </Grid>

                        <!-- Row 3 -->
                        <Grid Margin="0,0,0,18">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,6,0">
                                <TextBlock Text="Montant TTC après Remise" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtApresRemiseAmount" 
                                         Style="{StaticResource ModernTextBox}" 
                                         IsEnabled="False"
                                         MaxLength="20"
                                         FontWeight="Bold"
                                         FontSize="16" />
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="6,0">
                                <TextBlock Text="Object" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtObject" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Margin="6,0">
                                <TextBlock Text="Method de Payment" Style="{StaticResource FieldLabel}"/>
                                <ComboBox x:Name="cmbPaymentMethod"
                                          Style="{StaticResource ModernComboBox}"
                                          SelectionChanged="cmbPaymentMethod_SelectionChanged"/>
                            </StackPanel>
                            <StackPanel Grid.Column="3" Margin="6,0,0,0">
                                <TextBlock x:Name="lblChequeReference" 
                                           Text="Référence de Chèque" 
                                           Style="{StaticResource FieldLabel}"
                                           Visibility="Collapsed"/>
                                <TextBox x:Name="txtChequeReference" 
                                         Style="{StaticResource ModernTextBox}"
                                         Visibility="Collapsed"/>
                            </StackPanel>
                        </Grid>

                        <!-- Row 4 -->
                        <Grid Margin="0,0,0,18">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,6,0">
                                <TextBlock Text="Nom que Donne" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtGivenBy" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="6,0">
                                <TextBlock Text="Nom que Reçoit" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtReceivedBy" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Margin="6,0" Grid.ColumnSpan="2">
                                <TextBlock Text="Référence de Client" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtClientReference" 
             Style="{StaticResource ModernTextBox}"
             Background="White"
             Foreground="#0F172A"
             FontWeight="SemiBold"/>
                            </StackPanel>
                        </Grid>

                        <!-- Last Row: Description and Montant avec lettre -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,6,0">
                                <TextBlock Text="Description / Notes" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtDescription" 
                                         Style="{StaticResource ModernTextBox}"
                                         Height="120"
                                         MaxLength="500"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         VerticalContentAlignment="Top"
                                         VerticalScrollBarVisibility="Auto"
                                         Padding="16"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="6,0,0,0">
                                <TextBlock Text="Montant avec lettre" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtAmountInLetters" 
                                         Style="{StaticResource ModernTextBox}" 
                                         Height="120"
                                         IsReadOnly="True" 
                                         TextWrapping="Wrap"
                                         VerticalContentAlignment="Top"
                                         VerticalScrollBarVisibility="Auto"
                                         Padding="16"/>
                            </StackPanel>

                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Action Buttons Section -->
                <Border Background="{StaticResource SurfaceBrush}" 
                        Padding="24,20"
                        Margin="0,0,0,40"
                        CornerRadius="12"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1">
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        <Button x:Name="btnPreview"
                                Content="👁️ Aperçu"
                                Style="{StaticResource ModernButtonStyle}"
                                Background="{StaticResource AccentBrush}"
                                Foreground="White"
                                MinWidth="140"
                                FontSize="15"
                                Click="btnPreview_Click"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>